<table class="table table-striped table-hover" id="favorite-album-table">
  <thead>
    <tr>
      <th>#</th>
      <th></th>
      <th>Artist</th>
      <th>Album</th>
      <th>Release Date</th>
      <th>Follow</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |x| %>
      <tr>
        <td><%= x.id %></td>
        <td><div class="image-container" style="background-image: url(<%= x.thumbnail %>);"></div></td>
        <td><%= x.artist %></td>
        <td><%= x.album_title %></td>
        <td><%= x.release_date %></td>
        <td>
          <% if @favorites.include? x.id %>
            <%= form_tag unfavorite_album_path(x), method: :delete %>
            <button class="btn btn-danger" data-id=<%=x.id%> data-action="unfavorite">Unfollow</button></form>
          <% else %>
            <%= form_tag favorite_album_path(x), method: :post %>
            <button class="btn btn-default" data-id=<%=x.id%> data-action="favorite">Follow</button></form>
          <% end %>
      </tr>
    <% end %>
</table> 

